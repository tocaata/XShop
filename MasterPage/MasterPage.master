              <div style="float: right">
                
              </div>
              <br />
              <br />
                <div style="float: right"><font color="white">今天是：</font><asp:Label ID="labDate" runat="server"
                 ForeColor="White"><%# System.DateTime.Now.ToLongDateString() %></asp:Label>
                <font color="white">/</font><br />
                <asp:Label ID="labDateTime" runat="server" Text="Label" ForeColor="White"></asp:Label>
              </div>
            </td>
          </tr>
          </table>
        <div style="width: 100%; height: 30px; background: #2E9AFE;" align="center">
          <div style="height: 30px; width: 980px; font-size: 18px; font-family: 微软雅黑;text-decoration: none;" align="left">
            <div class="nav" style="height: 30px;width:90px; float:left; background: #FFBA00; border-right: 1px #fff solid; border-left: 1px #fff solid;">
